# osf-gateway environment variables

# ─── Core ───────────────────────────────────────────
PORT=8080
JWT_SECRET=change-me-to-a-random-string
DATABASE_URL=postgresql://osf_admin:osf_secret@localhost:30436/osf

# ─── Version ────────────────────────────────────────
APP_VERSION=1.2.0

# ─── MCP Server (factory-sim-v2, internal k8s service) ──
MCP_URL=http://factory-sim-v2:8020

# ─── LLM ────────────────────────────────────────────
LLM_URL_FREE=http://192.168.178.120:5002
LLM_URL_PREMIUM=http://192.168.178.120:5001
LLM_MODEL_FREE=qwen2.5-14b-instruct
LLM_MODEL_PREMIUM=qwen2.5-32b-instruct
LLM_MAX_CONCURRENCY=2
LLM_MAX_QUEUE_DEPTH=10
LLM_ENCRYPTION_KEY=           # 64-char hex, or leave empty to derive from JWT_SECRET

# ─── Node-RED Pods ──────────────────────────────────
NR_POD_IMAGE=192.168.178.150:32000/osf-nodered:latest
NR_POD_SECRET=                # Shared secret for NR pod <-> gateway auth
NR_WARM_POOL_SIZE=3
NR_IDLE_TIMEOUT_MINUTES=20

# ─── GitHub OAuth ───────────────────────────────────
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_WEBHOOK_SECRET=

# ─── CORS ───────────────────────────────────────────
FRONTEND_URL=https://openshopfloor.zeroguess.ai
